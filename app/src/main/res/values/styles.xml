<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =============================================== -->
    <!-- COLLAPSING TOOLBAR STYLES -->
    <!-- =============================================== -->

    <!-- Expanded Title Style (Large, Bold, Cinema Feel) -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
       <!-- <item name="android:fontFamily">@font/cinematic_bold</item>-->
        <item name="android:letterSpacing">0.02</item>
        <item name="android:shadowColor">@color/shadow_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Collapsed Title Style (Compact, Clean) -->
    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
   <!--     <item name="android:fontFamily">@font/cinematic_medium</item>-->
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Alternative Expanded Style (More Dramatic) -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded.Dramatic" parent="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Subtitle Style for Expanded State -->
    <style name="TextAppearance.App.CollapsingToolbar.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:fontFamily">@font/cinematic_regular</item>-->
        <item name="android:letterSpacing">0.03</item>
        <item name="android:shadowColor">@color/shadow_medium</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- =============================================== -->
    <!-- TOOLBAR THEME STYLES -->
    <!-- =============================================== -->

    <!-- Custom App Bar Theme -->
    <style name="ThemeOverlay.App.AppBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/gradient_start</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Collapsed
        </item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- =============================================== -->
    <!-- COLLAPSING TOOLBAR LAYOUT STYLES -->
    <!-- =============================================== -->

    <!-- Main CollapsingToolbarLayout Style -->
    <style name="Widget.App.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="expandedTitleTextAppearance">
            @style/TextAppearance.App.CollapsingToolbar.Expanded
        </item>
        <item name="collapsedTitleTextAppearance">
            @style/TextAppearance.App.CollapsingToolbar.Collapsed
        </item>
        <item name="contentScrim">@drawable/gradient_header_background</item>
        <item name="statusBarScrim">@color/primary_dark</item>
        <item name="scrimAnimationDuration">300</item>
        <item name="toolbarId">@id/toolbar</item>
        <item name="titleEnabled">true</item>
        <item name="expandedTitleGravity">bottom|start</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleMarginStart">24dp</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="expandedTitleMarginBottom">32dp</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Premium CollapsingToolbar with Gold Accent -->
    <style name="Widget.App.CollapsingToolbar.Premium" parent="Widget.App.CollapsingToolbar">
        <item name="expandedTitleTextAppearance">
            @style/TextAppearance.App.CollapsingToolbar.Expanded.Premium
        </item>
        <item name="contentScrim">@drawable/premium_gradient_background</item>
    </style>

    <!-- Premium Expanded Title with Gold -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded.Premium" parent="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/premium_gold</item>
        <item name="android:shadowColor">@color/shadow_dark</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <!-- =============================================== -->
    <!-- APP BAR LAYOUT STYLES -->
    <!-- =============================================== -->

    <!-- AppBarLayout Style -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@drawable/gradient_header_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@animator/appbar_elevation</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- =============================================== -->
    <!-- FONT FAMILIES (Add these to res/font/) -->
    <!-- =============================================== -->

    <!--
    Create these font files in res/font/:
    - cinematic_bold.xml
    - cinematic_medium.xml
    - cinematic_regular.xml

    Or use system fonts:
    -->

    <!-- System Font Alternatives -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded.SystemFont" parent="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed.SystemFont" parent="TextAppearance.App.CollapsingToolbar.Collapsed">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- =============================================== -->
    <!-- ANIMATION STYLES -->
    <!-- =============================================== -->

    <!-- Smooth Transition Style -->
    <style name="Widget.App.CollapsingToolbar.Smooth" parent="Widget.App.CollapsingToolbar">
        <item name="scrimAnimationDuration">400</item>
        <item name="titleEnabled">true</item>
    </style>

    <!-- Fast Snap Style -->
    <style name="Widget.App.CollapsingToolbar.Snap" parent="Widget.App.CollapsingToolbar">
        <item name="scrimAnimationDuration">200</item>
    </style>

    <!-- =============================================== -->
    <!-- DARK THEME VARIANTS -->
    <!-- =============================================== -->

    <!-- Dark Theme CollapsingToolbar -->
    <style name="Widget.App.CollapsingToolbar.Dark" parent="Widget.App.CollapsingToolbar">
        <item name="contentScrim">@color/surface_dark</item>
        <item name="statusBarScrim">@color/background_dark</item>
    </style>

    <!-- Dark Theme Expanded Title -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded.Dark" parent="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:shadowColor">@color/background_dark</item>
    </style>

    <!-- =============================================== -->
    <!-- UTILITY STYLES -->
    <!-- =============================================== -->

    <!-- No Title Style (for custom layouts) -->
    <style name="Widget.App.CollapsingToolbar.NoTitle" parent="Widget.App.CollapsingToolbar">
        <item name="titleEnabled">false</item>
    </style>

    <!-- Compact Style (smaller height) -->
    <style name="Widget.App.CollapsingToolbar.Compact" parent="Widget.App.CollapsingToolbar">
        <item name="expandedTitleTextAppearance">
            @style/TextAppearance.App.CollapsingToolbar.Expanded.Compact
        </item>
        <item name="expandedTitleMarginBottom">16dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded.Compact" parent="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:textSize">32sp</item>
    </style>

</resources>
